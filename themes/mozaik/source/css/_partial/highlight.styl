highlight-background   = #333
highlight-current-line = #efefef
highlight-selection    = #d6d6d6
highlight-foreground   = #ddd
highlight-comment      = #8e908c
highlight-red          = #e95e3f
highlight-orange       = #eeaf43
highlight-yellow       = #eab700
highlight-green        = #718c00
highlight-aqua         = #3e999f
highlight-blue         = #4271ae
highlight-purple       = #8959a8

pre, code
  font-family font-mono
  background
  color highlight-foreground
  font-size 0.95em

code
  padding: 0 5px

pre
  padding: 10px 15px
  line-height: 22px
  code
    border: none
    display: block
    padding: 0

.highlight
  background highlight-background
  color      highlight-foreground
  padding: 10px 15px
  overflow: auto
  margin: 0
  table
    margin: 0 !important
    border: 0
    th, td
      padding: 0
  figcaption
    clearfix()
    margin: -5px 0 5px
    font-size: 0.9em
    color: color-gray
    a
      float: right
  pre
    padding: 0
    border: none
    background: none
  .line
    height: 22px

pre
  .comment
  .title
    color: highlight-comment
  .variable
  .attribute
  .tag
  .regexp
  .ruby .constant
  .xml .tag .title
  .xml .pi
  .xml .doctype
  .html .doctype
  .css .id
  .css .class
  .css .pseudo
    color: highlight-red
  .number
  .preprocessor
  .built_in
  .literal
  .params
  .constant
    color: highlight-orange
  .class
  .ruby .class .title
  .css .rules .attribute
    color: highlight-green
  .string
  .value
  .inheritance
  .header
  .ruby .symbol
  .xml .cdata
    color #a2e7da
  .css .hexcolor
    color: highlight-aqua
  .function
  .python .decorator
  .python .title
  .ruby .function .title
  .ruby .title .keyword
  .perl .sub
  .javascript .title
  .coffeescript .title
    color: highlight-blue
  .keyword
  .javascript .function
    color: highlight-purple
